# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
PORT=3000
NODE_ENV=development # Set to 'production' in production environments
JOB_TIMEOUT= 300000 # 5 minutes
SHOW_REQUEST_LOGS=true # Set to false in production

# API Security
API_TOKEN=your-api-token-here

# Worker Configuration
WORKER_CONCURRENCY=5
WORKER_RATE_LIMIT_MAX=5
WORKER_RATE_LIMIT_DURATION=1000

# Logging
LOG_LEVEL=info # Use 'debug' in development, 'info' in production

# Dashboard Authentication (for production)
DASHBOARD_USER=admin
DASHBOARD_PASS=secure-password-here